{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "info"
			},
			"style": {
				"useSelfClosingElements": {
					"level": "error",
					"fix": "safe"
				},
				"useTemplate": "info"
			},
			"security": {
				"noDangerouslySetInnerHtml": "info"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useAltText": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
